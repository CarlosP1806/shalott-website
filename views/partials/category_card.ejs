<article class="category">
  <img class="category__image image image--square" src="<%= category.image %>"
    alt="Prodctos de tipo <%= category.name %>">
  <a class="category__overlay" href="/catalogo/categorias/<%= category.name.toLowerCase() %>"></a>
  <div class="category__name">
    <a href="/catalogo/categorias/<%= category.name.toLowerCase() %>"><%= category.name %></a>
  </div>
</article>