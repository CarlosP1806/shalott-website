<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Shalott | Detalles de Envío</title>

  <meta name="robots" content="noindex">
  
  <meta name="theme-color" content="e1d3cf">
  <link rel="icon" type="image/x-icon" href="/images/ShalottFavIcon.png">

  <link rel="stylesheet" href="/css/styles.css" />
  <link rel="stylesheet" href="/css/checkout.css">
  <link rel="stylesheet" href="/css/navbar.css">
  <link rel="stylesheet" href="/css/footer.css">

  <!-- Font awesome link-->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <!-- Box icons -->
  <link href='https://unpkg.com/boxicons@2.0.8/css/boxicons.min.css' rel='stylesheet'>
</head>

<body>
  <%- include("partials/navbar.ejs") %>
    <main>
      <section class="section section--cart">
        <div class="section__content">
          <header class="section__title">
            <h1 class="title__text">Detalles de Envío</h1>
            <div class="title__line"></div>
          </header>
          <div class="form-wrapper">
            <form class="checkout__form form">
              <div class="form-row">
                <label for="name">Nombre(s):</label>
                <input type="text" id="name" required>
              </div>
              <div class="form-row">
                <label for="lastname">Apellido(s):</label>
                <input type="text" id="lastname" required>
              </div>
              <div class="form-row">
                <label for="address">Dirección:</label>
                <input type="text" id="address" required>
              </div>
              <div class="form-row">
                <label for="city">Ciudad:</label>
                <input type="text" id="city" required>
              </div>
              <div class="form-row">
                <label for="state">Estado:</label>
                <select id="state" required>
                  <option value="" selected>-- Selecciona Estado --</option>
                  <option value="Queretaro">Querétaro</option>
                  <option value="Guanajuato">Guanajuato</option>
                  <option value="Ciudad de Mexico">Ciudad de México</option>
                  <option value="Michoacan">Michoacán</option>
                </select>
              </div>
              <div class="form-row">
                <label for="postal">Código Postal:</label>
                <input type="text" id="postal" required>
              </div>
              <div class="form-row">
                <label for="phone">Número de Teléfono:</label>
                <input type="text" id="phone" required>
              </div>
              <div class="form-row">
                <label for="email">Correo Electrónico:</label>
                <input type="email" id="email" required>
              </div>
              <button class="btn mt-1-5">Proceder al Pago</button>
            </form>

            <aside class="checkout-summary">
              <h2 class="summary__title">Resumen de Orden</h2>
              <div class="summary__cards">
                <!-- Products go here -->
              </div>
              <div class="summary__price">Total:
                $<span id="total-price"></span>
              </div>
            </aside>
          </div>
        </div>
      </section>
    </main>
    <%- include("partials/footer.ejs") %>

      <template id="summary-template">
        <article class="summary-card">
          <div class="summary__details">
            <p class="summary__name"></p>
            <div class="summary__container quantity-container" >
              (x<p class="summary__quantity"></p>)
            </div>
          </div>
          <div class="summary__container subtotal-container">
            Subtotal: $<p class="summary__subtotal"></p>
          </div>
        </article>
      </template>

      <script src="/js/navbar.js"></script>
      <script src="/js/checkout.js"></script>
</body>

</html>